
[tox]
envlist = py35, py36, docs
;envlist = py35, docs
;envlist = py35
;envlist = docs
skipsdist = true

[travis]
python =
    3.5: py35, docs
    3.6: py36

[testenv]
skip_install = true
deps = pipenv
commands =
    pipenv install --dev --skip-lock
    pipenv run test

[testenv:docs]
basepython = python3.5
deps =
    pipenv
    sphinx
commands =
    pipenv run doctest
    pipenv run build-docs
